<div class="error-message">
  <% flash.each do |message_type, message| %>
    <%= message %>
  <% end %>
</div>

<div class="reserve-room">
  <%= form_with model: @reservation,  method: :get, url: reservations_show_path do |f| %>
    <%= f.hidden_field :post_id, value: @post.id %>
    <%= f.hidden_field :user_id, value: current_user.id %>

    <div class="reserve-left">
      <img class="room_image" src="<%= @post.room_image %>", width="100%" height="100%">

      <div class="detail-left">
        <% if current_user.image? %>
          <img src="<%= current_user.image %>", width="50" height="50" >
        <% else %>
          <%= image_tag "/icon.jpg", size:"70x70" %>
        <% end %>
      </div>

      <div class="detail-right">
        ルーム名：<%= @post.room_name %><br>
        住所：<%= @post.address %>
      </div>

     <div class="detail-bottom">
      ルーム紹介：<%= @post.room_profile %>
     </div>
    </div>

    <div class="reserve-right">
      <h3>¥<%= @post.price %>/日</h3>

      <table cellspacing="3>
        <tr>
          <td>
            <%= f.label :start_date, "開始日" %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.date_field :start_date, required: true, size:50, min: Date.current %>
          </td>
        </tr>

        <tr>
          <td>
            <%= f.label :start_date, "終了日" %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.date_field :end_date, required: true, min: Date.current %>
          </td>
        </tr>

        <tr>
          <td>
            <%= f.label :person, "人数" %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.number_field :person, required: true, in: 1..100 %>
          </td>
        </tr>

        <tr>
          <td>
            <%= f.submit "予約する" %>
          </td>
        </tr>
      </table>
    </div>
  <% end %>

</div>
