<h1>検索結果：<%=User.count%>件</h1>

<table>
  <tbody>
     <% @posts.each do |post| %>
       <tr>
         <td><img src="<%= post.room_image %>", width="200" height="200"></td>
         <td><%= post.room_name %></td>
         <td><%= post.address %></td>
         <td><%= post.price %></td>
       </tr>
     <% end %>
  </tbody>
</table>